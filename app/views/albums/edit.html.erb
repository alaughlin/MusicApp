<% if flash[:errors] %>
  <% flash[:errors].each do |error|%>
    <%= error %><br />
  <% end %>
<% end %>

<h1>Edit <%= @album.title %></h1>

<form action="<%= album_url(@album) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>

  <label>
    Album Title
    <input type="text" name="album[title]" value="<%= @album.title %>">
  </label>
  <br>

  <label>
    Recording Type:
    <br>
    <label>
      Live
      <input type="radio" name="album[recording_type]" value="Live">
    </label>

    <label>
      Studio
      <input type="radio" name="album[recording_type]" value="Studio">
    </label>
  </label>
  <br>

  <button>Edit Album</button>
</form>